<% include partials/header %>

<div class="container centertopage">
        <h2>Edit Details of <%=item.item%></h2>
        
        <!-- Form starts -->
        <form id="contact-form"  action="/items/<%=item._id%>?_method=PUT" method="POST" >

            <div class="messages"></div>
        
            <div class="controls">
                <div class="row">
                    
                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="form_name">Item name *</label>
                            <input required id="form_name" type="text" name="item[item]" class="form-control" value="<%=item.item%>" required="required" data-error="Item name is required.">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="form_lastname">Location(2-3 words) *</label>
                            <input required id="form_lastname" type="text" name="item[details]" class="form-control" value="<%=item.details%>" required="required" data-error="Location is required.">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>

                <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="example-date-input" class="col-2 col-form-label">Date</label>
                                <div class="col-10">
                                    <input required class="form-control" name="item[date]"  type="date" value="<%=item.date%>"id="example-date-input">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                    <label for="example-time-input" class="col-2 col-form-label">Time</label>
                                    <div class="col-10">
                                      <input required class="form-control" name="item[time]" type="time" value="<%=item.time%>" id="example-time-input">
                                    </div>
                            </div>
                        </div>
                    </div>

                
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="form_message">Specifications of the item, start with "Lost" or "Found"(30-40 words) *</label>
                            <textarea required id="form_message" name="item[specifications]" class="form-control" value="<%=item.specifications%>" rows="4" required="required" data-error="Please, leave us a message."></textarea>
                            <div class="help-block with-errors"></div>
                        </div>
                        <p>Please fill this again:</p>
                        <div class="form-group">
                            <label for="form_isLost">The item is lost*</label>
                            <input type="radio" id="form_isLost" name="item[isLost]" value="lost" required />
                        </div>
                        <div class="form-group">
                            <label for="form_isFound">Item is found*</label>
                            <input type="radio" id="form_isFound" name="item[isLost]"  />
                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input class="form-control" type="text" name="location" id="location" value="<%= item.location %>">
                        </div>
                    </div>
                    
                    <div class="col-md-12">
                        <input type="submit"  class="btn btn-success btn-send" value="Add Query">
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-12">
                        <p class="text-muted">
                            <strong>*</strong> These fields are required. We will do our best to find your item.
                        </p>
                    </div>
                </div>
            </div>
        
        </form>
    </div>
    <!-- Form ends -->
    
<% include partials/footer %>